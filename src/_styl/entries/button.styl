/*
  https://github.com/lynnandtonic/a-single-div/blob/master/_styl/entries/button.styl

  Button
*/
#button
  background: #555

  div
    width: 180px
    height: @width
    margin-left: -(@width/2)
    margin-top: -(@width/2)

    background: skyblue
    border-radius: 50%

    box-shadow: inset 0 5px 5px skyblue,
                inset 0 17px 5px white(.7),
                inset 0 -3px 3px white(.3),
                inset 0 -10px 10px black(.3),
                inset 0 -15px 10px darken(skyblue, 15),
                0 7px 10px black(.3)

    &:before
      width: 110px
      height: 106px
      left: 50%
      top: 50%
      margin-left: -(@width/2)
      margin-top: -55px

      background-image: radial-gradient(circle at 38px 38px, #333 10px,
                                                             transparent 10px),
                        radial-gradient(circle at 73px 73px, #333 10px,
                                                             transparent 10px),
                        radial-gradient(circle at 38px 73px, #333 10px,
                                                             transparent 10px),
                        radial-gradient(circle at 73px 38px, #333 10px,
                                                             transparent 10px)

      border-radius: 50%
      border-top: 1px solid black(.6)
      border-bottom: 1px solid white(.6)

      box-shadow: inset 0 20px 2px white(.3),
                  3px -15px 7px -4px black(.3),
                  0 -14px 10px 5px darken(skyblue, 15),
                  0 2px 5px 5px skyblue,
                  0 10px 5px 5px white(.6)

    &:after
      width: 50px
      height: @width
      left: 50%
      top: 50%
      margin-left: -(@width/2)
      margin-top: -23px

      background-image: linear-gradient(to right, transparent 35%,
                                                  navy 35%,
                                                  steelblue 40%,
                                                  navy 45%,
                                                  steelblue 50%,
                                                  navy 55%,
                                                  steelblue 60%,
                                                  navy 65%,
                                                  transparent 65%),
                        linear-gradient(to bottom, transparent 35%,
                                                  navy 35%,
                                                  steelblue 40%,
                                                  navy 45%,
                                                  steelblue 50%,
                                                  navy 55%,
                                                  steelblue 60%,
                                                  navy 65%,
                                                  transparent 65%)
      border-radius: 50%

      -webkit-transform: rotate(45deg)
      transform: rotate(45deg)